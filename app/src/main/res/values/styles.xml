<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/ProgressDialogTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlbumViewTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#88000000</item>
    </style>

    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/dialog_back</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

</resources>